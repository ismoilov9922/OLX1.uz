<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.OLXuz" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="background">@color/background</item>
        <item name="badgeTextColor">@color/backgroundColor_night</item>
        <item name="backgroundColor">@color/backgroundColor</item>
        <item name="statusBarBackground">@color/backgroundColor</item>
        <item name="tabBackground">@color/black</item>
        <item name="android:textColorHint">@color/text_hintColor</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:ignore="NewApi">@color/statusBarColor</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.Adiblar.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Adiblar.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>